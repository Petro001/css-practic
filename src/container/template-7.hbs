<div>
  <header class='header'>
    <div>
      {{> logoDark}}
    </div>
    <nav class='header_nav'>
      <div class='header_nav_right'>
        {{>navDark link=header.links}}
      </div>
    </nav>
  </header>
  <div class="header_ad">
    {{#with header.ad}}
    <div class="logo_ad">Ad</div>
    <p class="header_ad_text">{{text}}: {{url}}</p>
    {{/with}}
    {{#with header}}
    <p class="header_userOnline">User online:{{userOnline}}</p>
    {{/with}}
  </div>
</div>

{{#with hero}}
<div class="hero">
  <div class="hero_title">{{title}}</div>
  <div class="hero_text">{{description}}</div>
  {{#with button}}
  <a href="{{url}}" class="hero_btn">{{text}}</a>
  {{/with}}
</div>
{{/with}}

{{#with about}}
<div class="about">
  <h3 class="about_heading">{{heading}}</h3>
  <p class="about_info">{{info}}</p>
</div>
{{/with}}
<div class="article">
  <div class="articles_title_badge">
    <h3 class="articles_title"> Our Articles</h3>
    <span class="articles_badge">View All</span>
  </div>
  <div class="articles">
    {{#each articles}}
    {{> cardArticles data=this}}
    {{/each}}
  </div>
</div>



<footer class="footer_page">
  {{#with footer}}
  <div class="pages">
    {{#each pages}}
    <a href="{{path}}" class="pages_path">{{name}}</a>
    {{/each}}
  </div>
  <div class="copyright">
    {{copyright}}
  </div>
  {{/with}}

</footer>